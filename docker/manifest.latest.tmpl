image: covergates/drone-covergates:latest
{{#if build.tags}}
tags:
{{#each build.tags}}
  - {{this}}
{{/each}}
{{/if}}
manifests:
  -
    image: covergates/drone-covergates:{{#if build.tag}}{{trimPrefix "v" build.tag}}-{{/if}}linux-amd64
    platform:
    architecture: amd64
    os: linux

  -
    image: covergates/drone-covergates:{{#if build.tag}}{{trimPrefix "v" build.tag}}-{{/if}}linux-arm64
    platform:
    architecture: arm64
    os: linux
    variant: v8

  -
    image: covergates/drone-covergates:{{#if build.tag}}{{trimPrefix "v" build.tag}}-{{/if}}linux-arm
    platform:
    architecture: arm
    os: linux
    variant: v7
